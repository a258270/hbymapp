<!--pages/person/information/information.wxml-->
<view class="page">
  <view class="page-left">
    <view class="text"><text>考试类型</text></view>
    <view class='picker'>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view>{{array[index]}}</view>
      </picker>
    </view>
  </view>
  <view class='line'></view>
  <view class="page-left">
    <view class="text"><text>考试所在地</text></view>
    <view class='input'>
      河北省
    </view>
  </view>
  <view class='line'></view>
  <view class='page-left'>
    <view class='text'>
      <text>高考成绩</text>
      <text style='color:red;font-size:25rpx;'>*该成绩用于模拟填报、智能推荐等相关功能</text>
    </view>
    <view class="input">
      <input bindinput="bindKeyInput" placeholder="高考成绩" type='text'/>
    </view>
  </view>
  <view class='line'></view>
  <view class='page-left'>
    <view class='text'>年级</view>
    <view class='picker'>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{arrays}}">
        <view>{{arrays[index]}}</view>
      </picker>
    </view>
  </view>
  <view class='line'></view>
  <view class='page-left'>
    <view class='text'>
      <text>一模成绩</text>
      <text style='color:red;font-size:25rpx;'>*该成绩用于高校检索查询</text>
    </view>
    <view class='input'>
      <input bindinput="bindKeyInput" placeholder="一模成绩" type='idcard'/>
    </view>
  </view>
  <view class='line'></view>
  <view class='page-left'>
    <view class='text'>
      <text>二模成绩</text>
      <text style='color:red;font-size:25rpx;'>*该成绩用于高校检索查询</text>
    </view>
    <view class='input'>
      <input bindinput="bindKeyInput" placeholder="二模成绩" type='idcard'/>
    </view>
  </view>
  <view class='line'></view>
  <view class='page-left'>
    <view class='text'>
      <text>三模成绩</text>
      <text style='color:red;font-size:25rpx;'>*该成绩用于高校检索查询</text>
    </view>
    <view class='input'>
      <input bindinput="bindKeyInput" placeholder="三模成绩" type='idcard'/>
    </view>
  </view>
  <view class='line'></view>
</view>
<button class="weui-btn" type="primary" form-type='submit'>保存修改</button>