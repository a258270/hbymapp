<view class="page">
<view class="realname">
    <view class="text"><text>昵称</text></view>
    <view class='input'>
      <input bindinput="bindKeyInput" placeholder="昵称" type='text'/>
    </view>
  </view>
  <view class='line'></view>
  <view class="realname">
    <view class="text"><text>真实姓名</text></view>
    <view class='input'>
      <input bindinput="bindKeyInput" placeholder="真实姓名" type='text'/>
    </view>
  </view>
  <view class='line'></view>
  <view class='sex'>
    <view class='text'>性别</view>
    <view class='picker'>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view>{{array[index]}}</view>
      </picker>
    </view>
  </view>
  <view class='line'></view>
  <view class='date'>
    <view class='text'>出生日期</view>
    <view class='picker'>
      <picker mode="date" value="{{date}}" start="1900-09-01" end="2017-09-01" bindchange="bindDateChange">
      <view>{{date}}</view>
      </picker>
    </view>
  </view>
  <view class='line'></view>
  <view class='email'>
    <view class='text'>邮箱</view>
    <view class="mail">
      <input bindinput="bindKeyInput" placeholder="邮箱号码" type='text'/>
    </view>
  </view>
  <view class='line'></view>
  <view class='phone'>
    <view class='text'>手机号</view>
    <view class='input'>
      <input bindinput="bindKeyInput" placeholder="手机号码" type='number'/>
    </view>
  </view>
  <view class='line'></view>
  <view class='card'>
    <view class='text'>身份证号</view>
    <view class='input'>
      <input bindinput="bindKeyInput" placeholder="身份证号" type='idcard'/>
    </view>
  </view>
  <view class='line'></view>
</view>
<button class="weui-btn" type="primary" form-type='submit'>保存修改</button>