<!--pages/major/major.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
              <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
    </view>
    <view class="weui-tab__panel">
      <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
        <view class="content1">
          <view class='item'>
            <view class="item-1" bindtap='show'>
              <text>哲学</text>
              <view class='arrow'></view>
            </view>
            <navigator url='../../../majorcontent/majorcontent' class="item-2 {{show?'show':'hide'}}">
              <text>哲学</text>
            </navigator> 
          </view>
        </view>
      </view>
      <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
        <view class="content1">
          <view class='item'>
            <view class="item-1" bindtap='show'>
              <text>农林畜牧业</text>
              <view class='arrow'></view>
            </view>
            <navigator url='../../../majorcontent/majorcontent' class="item-2 {{show?'show':'hide'}}">
              <text>哲学</text>
            </navigator> 
          </view>
        </view>
      </view>
      </view>
    </view>
  </view>
</view>