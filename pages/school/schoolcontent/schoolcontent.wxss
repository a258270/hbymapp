/* pages/school/schoolcontent/schoolcontent.wxss */
@import '/wxParse/wxParse.wxss';
page{
  background-color:#EEEEEE;
}
.banner{
  width:100%;
  height:260rpx;
}
.banner image{
  width:100%;
  height:100%;
}
.logo{
  width:92%;
  height:200rpx;
  margin:-100rpx 4% 0 4%;
  position: relative;
  z-index:2;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.logo-left{
  width:22%;
  height:150rpx;
  border-radius:75rpx;
  overflow: hidden;
}
.logo-left image{
  width:100%;
  height:100%;
}
.logo-right{
  width:65%;
  height:150rpx;
  margin-left:3%;
  color:white;
  font-size:30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  
}
.logo-image{
  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.logo-text{
  font-size:35rpx;
}
.logo-image image{
  margin-top:30rpx;
  width:20%;
  height:40rpx;
}
.logo-image text{
  margin-top:30rpx;
  width:40%;
  height:50rpx;
  background-color: rgb(91,192,222);
  font-size:28rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.line{
  width:100%;
  height:1rpx;
  border-top:1rpx solid #CCCCCC;
}
.content{
  width:92%;
  margin:2% 4% 0 4%;
  background-color:white;
}
.content-top{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size:28rpx;
}
.content-top image{
   width:30rpx;
   height:30rpx;
   margin-right:2%;
}
.content-center{
  font-size:28rpx;
  width:100%;
  height:200rpx;
  overflow: hidden;
}
.message{
  width:92%;
  margin:4% 4% 0 4%;
  background-color:white;

}
.weui-navbar{
  width:80%;
  margin:0 10%;
  font-size:28rpx;
}
.weui-navbar__item{
  border:1rpx solid rgb(90,180,170);
  border-radius: 5rpx;
  width:40%;
  margin:5% 0;
  padding:8rpx 25rpx;
  color:rgb(90,180,170);
}
.weui-navbar{
  position: static;
  border:0;
}
.weui-tab__panel{
  padding-top:0;
}
.weui-navbar__item.weui-bar__item_on {
  background-color:rgb(90,180,170);
  color:white;
}
.top{
  width:96%;
  margin-left:4%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size:28rpx;
}
.top image{
  width:30rpx;
  height:30rpx;
}
.center{
  width:100%;
  display: flex;
  flex-direction: row;
  font-size:28rpx;
  background-color: #DDDDDD;
}
.center-item{
  width:20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom{
  width:100%;
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
  font-size:28rpx;
  background-color: white;
}
.bottom-item{
  width:20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.weui-cell{
  font-size:28rpx;
}
.weui-cell__ft image{
  width:80rpx;
  height:40rpx;
}
.types{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.blank{
  width:100%;
  height:200rpx;
}
.show{
  display: block
}
.hide{
  display: none
}