.content{
  width:94%;
  margin:1% 3% 0 3%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.content-left{
  width:10%;
  height:50rpx;
}
.content-left image{
  width:100%;
  height:100%;
}
.content-right{
  width:60%;
  margin-left:1%;
}
.content-right text{
  font-weight:bold;
  font-size:35rpx;
}
.line{
  width:100%;
  height:1rpx;
  border-top:1rpx solid #999999;
}
.weui-media-box__title{
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}