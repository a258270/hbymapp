  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
.head-left{
  width:45%;
  margin-left:3%;
  height: 300rpx;
  font-size:28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.image{
  width:45%;
  height:200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
