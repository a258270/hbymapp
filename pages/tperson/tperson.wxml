<!--pages/ttperson/ttperson.wxml-->
<view class="head" style="background-image:url('../../images/banner.png'); background-repeat:round">
  <view class="head-left">
    <view class='image'><image src="{{logo}}" style="width:130rpx;height:130rpx;" bindtap="chooseImageTap"></image></view>
    <view class='text'>
      <view class='text-top'><text>{{nickname}}</text></view>
    </view>
  </view>
  <view class="head-right">
    <view class='number'>{{completeCount}}%</view>
    <view class='texts'>信息完整度</view>
  </view>
</view>
<view class="weui-panel">
  <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_small-appmsg">
          <view class="weui-cells weui-cells_in-small-appmsg">
              <navigator url="../tperson/basics/basics" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                  <view class="weui-cell__hd"><image src="../../images/me01.png" style="width: 20px;height: 20px;margin-right: 5px" /></view>
                  <view class="weui-cell__bd weui-cell_primary">
                      <view>基础信息</view>
                  </view>
                  <view class="weui-cell__ft weui-cell__ft_in-access"></view>
              </navigator>
              <navigator url="../tperson/goods/goods" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                  <view class="weui-cell__hd"><image src="../../images/物品.png" style="width: 20px;height: 20px;margin-right: 5px" /></view>
                  <view class="weui-cell__bd weui-cell_primary">
                      <view>我的物品</view>
                  </view>
                  <view class="weui-cell__ft weui-cell__ft_in-access"></view>
              </navigator>
              <navigator url="../tperson/power/power" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                  <view class="weui-cell__hd"><image src="../../images/tb04.png" style="width: 20px;height: 20px;margin-right: 5px" /></view>
                  <view class="weui-cell__bd weui-cell_primary">
                      <view>账号安全</view>
                  </view>
                  <view class="weui-cell__ft weui-cell__ft_in-access"></view>
              </navigator>
              <navigator url="../tperson/contact/contact" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                  <view class="weui-cell__hd"><image src="../../images/联系人.png" style="width: 20px;height: 20px;margin-right: 5px" /></view>
                  <view class="weui-cell__bd weui-cell_primary">
                      <view>联系人</view>
                  </view>
                  <view class="weui-cell__ft weui-cell__ft_in-access"></view>
              </navigator>
          </view>
      </view>
  </view>
</view>